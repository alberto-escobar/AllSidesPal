{
  "name": "News Bias Reporter",
  "description": "News Bias Reporter is a tool that reports to you the poitical bias of the news site that you are viewing on chrome.",
  "version": "1.0",
  "manifest_version": 3,

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["bias-tooltip.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": ["storage", "activeTab","tabs","unlimitedStorage"],
  "host_permissions": ["https://allsides-api.herokuapp.com/"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/unknown.png"
      }
  },
  "options_page": "options.html"
}