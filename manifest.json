{
  "name": "Transparent Media",
  "description": "An extension that reports to you the factual and bias ratings of the website you are viewing based on its rating on allsides.com and mediabiasfactcheck.com.",
  "version": "1.0",
  "manifest_version": 3,

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["bias-tooltip.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "storage", 
    "tabs",
    "unlimitedStorage"
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "24": "icons/unknown.png",
    "48": "icons/unknown1.png",
    "128": "icons/unknown2.png"
  },

  "options_page": "options.html"
}